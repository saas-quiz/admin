generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  role     Role

  quizzes Quiz[]

  @@map("users")
}

model Quiz {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  questions Question[]
  author    String

  userId String? @db.ObjectId
  User   User?   @relation(fields: [userId], references: [id])

  @@map("quizzes")
}

model Question {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  options   Option[]
  answerKey String

  Quiz   Quiz   @relation(fields: [quizId], references: [id])
  quizId String @db.ObjectId

  @@map("questions")
}

model Option {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  key        String
  value      String
  questionId String   @db.ObjectId
  Question   Question @relation(fields: [questionId], references: [id])

  @@map("options")
}
